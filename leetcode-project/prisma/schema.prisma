generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id             Int      @id @default(autoincrement())
  supabaseUserId String   @unique @default(uuid())
  name           String?
  email          String?  @unique
  avatarUrl      String?
  role           UserRole @default(USER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}
