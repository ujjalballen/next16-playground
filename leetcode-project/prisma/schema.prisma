generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model Profile {
  id             Int             @id @default(autoincrement())
  supabaseUserId String          @unique @default(uuid())
  name           String?
  email          String?         @unique
  avatarUrl      String?
  role           UserRole        @default(USER)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  problems       Problem[]
  solvedProblems ProblemSolved[]
  submissions    Submission[]

  @@index([role])
}

model Problem {
  id          String     @id @default(uuid())
  title       String
  description String
  difficulty  Difficulty
  tags        String[]

  userId      Int
  examples    Json
  constraints String
  hints       String?
  editorial   String?

  testCases          Json
  codeSnippets       Json
  referenceSolutions Json
  updatedAt          DateTime        @updatedAt
  createdAt          DateTime        @default(now())
  user               Profile         @relation(fields: [userId], references: [id], onDelete: Cascade)
  submissions        Submission[]
  solvedBy           ProblemSolved[]

  @@index([difficulty])
}

model ProblemSolved {
  id        String   @id @default(uuid())
  userId    Int
  problemId String
  createdAt DateTime @default(now())

  user    Profile @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
}

model Submission {
  id            String           @id @default(uuid())
  userId        Int
  problemId     String
  sourceCode    Json
  language      String
  stdin         String?
  stdout        String?
  stderr        String?
  compileOutput String?
  status        String
  memory        String?
  time          String?
  createdAt     DateTime         @default(now())
  testCases     TestCaseResult[]

  user    Profile @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  @@index([status])
}

model TestCaseResult {
  id            String     @id @default(uuid())
  submissionId  String
  testCase      String
  passed        Boolean
  stdout        String?
  expected      String
  stdeer        String
  compileOutput String?
  status        String
  memory        String?
  time          String?
  createdAt     DateTime   @default(now())
  submission    Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
}
